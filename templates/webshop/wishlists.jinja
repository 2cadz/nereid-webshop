{% extends 'account-base.jinja' %}

{% block main %}
<section class="checkout-container" style="background:red;">
  <div class="container" id="wishlist">
    <!-- Checkout Step Indicator -->
    <div class="col-md-11 col-md-offset-1">
      {{ account_header(_('My Account / wishlist'), 'Wishlist') }}
    </div>
    <div class="col-md-11 col-md-offset-1 margin-top-30">
      <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-6">
          <div id="add-wishlist" data-toggle="modal" data-target="#myModal">
            <p>
              <i class="fa fa-plus"></i>
            </p>
          </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title center" id="myModalLabel">Add Wishlist</h4>
              </div>
              <form method="post" name="new_wishlist" action="" class="form-horizontal">
                <div class="modal-body">
                  <input type="hidden" name="csrf_token" value="{{ csrf_token() }}" />
                  <div class="form-group col-md-10">
                    <label for="name">Name*:</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        {% for wishlist in current_user.wishlists %}
        <div class="col-md-3 col-sm-4 col-xs-6">
          <div class="thumbnail1" style="background: url('{{ CDN }}{{ wishlist.products and wishlist.products[0].thumbnail or url_for('nereid.webshop.send_static_file', filename='images/no-image.jpg') }}') no-repeat">
            <div class="wishlist-options">
            <a href="{{ url_for('wishlist.wishlist.render_wishlist', active_id=wishlist.id) }}">
              <h4> {{ wishlist.name|title }}'s Wishlist</h4>
            </a>
            <span>( {{ wishlist.products|length }} Products )</span>
          </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% endblock main %}
